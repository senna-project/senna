{% extends '@SennaApp/layout.html.twig' %}

{% block bodyClass %}{{ parent() }} log{% endblock %}
{% block content %}
    <div class="container">

        <div class="row">
            <div class="col-md-8">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Message</th>
                        <th></th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for log in logs %}
                        <tr>
                            <td></td>
                            <td>{{ log.type }}</td>
                            <td>{{ log.message }}</td>
                            <td>
                                <a class="btn btn-default" href="#"><i class="fa fa-pencil"></i></a>
                                <a class="btn btn-default" href="#"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-md-2 logs">

            </div>
        </div>
    </div>
{% endblock content %}