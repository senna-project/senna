{% extends '@SennaApp/layout.html.twig' %}

{% block bodyClass %}{{ parent() }} settings general update{% endblock %}
{% block content %}
    <div class="container">

        <div>
            {{ render(url('room_create')) }}
        </div>

        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
                {% for room in rooms %}
                <tr>
                    <td>{{ room.name }}</td>
                    <td>{{ room.description }}</td>
                    <td>
                        <a class="btn btn-default" href="#"><i class="fa fa-times"></i></a>
                        <a class="btn btn-default" href="#"><i class="fa fa-pencil"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}