{% extends "@SennaApp/layout.html.twig" %}
{% block bodyClass %}user login{% endblock %}
{% block body %}
<div class="container">
    <div id="login-box">
        <h1>Senna</h1>
        <h2>{{ 'senna.security.login.welcome'|trans }}</h2>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <form action="{{ path('login_check') }}" method="post" class="form-horizontal" >

            <p> Login to your account </p>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group">
                <label for="username" hidden="hidden">{{ 'senna.security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="{{ 'senna.security.login.username'|trans }}" />
            </div>

            <div class="form-group">
                <label for="password" hidden="hidden">{{ 'senna.security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="{{ 'senna.security.login.password'|trans }}" />
            </div>
            <div class="checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'senna.security.login.remember_me'|trans }}</label>
            </div>

            <input type="submit" id="_submit" name="_submit" value="{{ 'senna.security.login.submit'|trans }}" class="btn btn-primary col-xs-12" />
        </form>
    </div>
</div>
{% endblock %}